{
  "name": "Rewards Farm Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "service-worker/service-worker.js"
  },
  "externally_connectable": {
    "matches": [
      "https://www.bing.com/",
      "https://rewards.bing.com/",
      "https://isthereanydeal.com/giveaways/"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://isthereanydeal.com/giveaways/"
      ],
      "js": [
        "content-script/game-check/game-check.js"
      ]
    },
    {
      "matches": [
        "https://www.bing.com/"
      ],
      "js": [
        "content-script/bing-page/bing-script.js"
      ]
    },
    {
      "matches": [
        "https://rewards.bing.com/"
      ],
      "js": [
        "content-script/reward-page/reward-script.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}